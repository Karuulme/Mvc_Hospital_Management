@{
    if (Session["Admin"] == "1")
    {
        <link href="~/Css/MainStil.css" rel="stylesheet" />
        using (Ajax.BeginForm("AreaAd", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "IndexBook" }))
        {
            <table width="80%" align="center" style="margin:10%;">
                <tr>
                    <td align="center">
                        <input type="text" placeholder="Area" name="Area" class="AcceptanceForm" />
                    </td>
                </tr>
                @if (ViewBag.AreaAdControl == true)
                {
                    <tr>
                        <td>
                            <span style="margin-left:10%;color:red">Lütfen Boş Bırakmayınız...</span>
                        </td>

                    </tr>
                }

                <tr>
                    <td align="center">
                        <input type="submit" value="Ekle" class="AcceptanceNext" />
                    </td>

                </tr>
                <tr>

                    <td>
                        <span style="margin-left:10%;color:red;font-size:1.6em;margin-top:35px;">@ViewBag.Kayit</span>
                    </td>
                </tr>
            </table>
        }
        <table class="table" align="center" width="50%">
            <tr>
                <td scope="col">#</td>
                <td scope="col" align="left">Alanlar</td>
                <td scope="col" align="right"><div style="margin-right:40px">Sil</div></td>
            </tr>
            @{ int sayac = 1;}
            @foreach (var item in ViewBag.AreaList)
            {
                <tr>
                    <td colspan="3">
                        <div style="width:100%;height:3px;background:#0026ff;margin:7px"> </div>
                    </td>
                </tr>
                <tr>
                    <td scope="row">@sayac</td>
                    <td>  @item.Area</td>
                    <td align="right">
                        <a href="https://localhost:44398/Home/AreaAdd/@item.Id"><button style="background: white; border: 1px solid #cacaca; padding:5px; width: 100px;">Delete</button> </a>
                    </td>

                </tr>

                sayac++;
            }

        </table>
    }
    else
    {

        <h2>Bu Sayfaya erişim yetkiniz yok.</h2>

    }




}
